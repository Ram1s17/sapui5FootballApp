<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Panel
        headerText="{i18n>playersPanelTitle}" expandable="true" expanded="false"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
            <mvc:XMLView viewName="sap.ui.demo.walkthrough.view.PlayersList"/>
        </content>
   </Panel> 
   <Panel
        headerText="{i18n>statisticsPanelTitle}" expandable="true"
        class="sapUiResponsiveMargin"
            width="auto">
        <content>
            <mvc:XMLView viewName="sap.ui.demo.walkthrough.view.StatisticsTable"/>
        </content>
    </Panel>
</mvc:View>