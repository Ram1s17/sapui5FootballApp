<mvc:View
		controllerName="sap.ui.demo.walkthrough.controller.App"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<customHeader>
			<Bar>
				<contentMiddle>
					<FlexBox alignContent="Center" alignItems="Center" width="100%" justifyContent="Center">
						<Text text="{i18n>homePageTitle}" textAlign="Center"></Text>
					</FlexBox>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox alignItems="Center" alignContent="Center" justifyContent="Center" class="sapUiLargeMargin">
				<Image src="../img/fcb.jpg" width="100%"></Image>
			</FlexBox>
			<mvc:XMLView viewName="sap.ui.demo.walkthrough.view.MainPanels"/>
		</content>
		<footer>
			<Bar>
				<contentMiddle>
					<FlexBox alignContent="Center" alignItems="Center" width="100%" justifyContent="Center">
						<Text text="{i18n>homePageFooterTitle}" textAlign="Center"></Text>
					</FlexBox>
				</contentMiddle>
				<contentRight>
					<FlexBox alignContent="Center" alignItems="Center" width="100%" justifyContent="Center">
						<Text text="{i18n>rightTitleInPageFooter}" textAlign="Center"></Text>
					</FlexBox>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>